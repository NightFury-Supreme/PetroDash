# PteroDash Docker Environment Configuration
# Copy this file to .env and modify the values for your setup

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-secure-mongodb-password
MONGO_INITDB_DATABASE=pterodash

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
MONGODB_URI=mongodb://admin:your-secure-mongodb-password@mongodb:27017/pterodash?authSource=admin

# ===========================================
# PTERODACTYL PANEL CONFIGURATION
# ===========================================
PTERO_BASE_URL=http://your-pterodactyl-panel:8080
PTERO_APP_API_KEY=your-pterodactyl-api-key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:4000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Change these in production!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
